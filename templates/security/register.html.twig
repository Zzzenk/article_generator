{% extends 'base.html.twig' %}

{% block body %}
    <body class="signin-body">
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">

                        <h1>Регистрация</h1>
                        {{ form_start(registrationForm, {
                            'attr': {'class': 'form-signin'}}
                        ) }}

                        <div class="form-label-group">
                            {{ form_row(registrationForm.email, {
                                'attr': {'class': 'form-control',
                                'autofocus': 'autofocus'}}
                            ) }}
                        </div>

                        <div class="form-label-group">
                            {{ form_row(registrationForm.firstName, {
                                'attr': {
                                    'class': 'form-control'}}
                            ) }}
                        </div>

                        <div class="form-label-group">
                            {{ form_row(registrationForm.password.first, {
                                'attr': {'class': 'form-control'}}
                            ) }}
                        </div>

                        <div class="form-label-group">
                            {{ form_row(registrationForm.password.second, {
                                'attr': {'class': 'form-control'}}
                            ) }}
                        </div>

                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Регистрация
                        </button>
                        <hr class="my-4">
                        <div class="text-center"><a href="{{ path('app_login') }}">Я уже зарегистрирован</a></div>
                        {{ form_end(registrationForm) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>
{% endblock %}

{% block title %}Авторизация. {{ parent() }}{% endblock %}
{% block footer %}{% endblock %}